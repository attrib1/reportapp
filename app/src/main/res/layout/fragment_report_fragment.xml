<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frangment.Report_fragment"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        android:clipToPadding="false"
        android:background="#3d70b6">
        <RelativeLayout
            android:id="@+id/main_toolbar_layout"
            app:theme="@style/Widget.AppCompat.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="แจ้งเหตุ"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postButton"
                android:src="@drawable/ic_check"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="10dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/toolbar2"
                android:background="#ffffff"
                android:id="@+id/relativeLayout2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/calendar"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/location"
                    android:src="@drawable/location_icon"
                    android:layout_below="@+id/imageView5"
                    android:layout_alignLeft="@+id/imageView5"
                    android:layout_alignStart="@+id/imageView5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 11 สิงหาคม 2559, 14.45น."
                    android:gravity="center"
                    android:id="@+id/dateText"
                    android:layout_above="@+id/location"
                    android:layout_toRightOf="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": ถนนศรีอยุธยา"
                    android:gravity="center"
                    android:id="@+id/textView7"
                    android:layout_below="@+id/imageView5"
                    android:layout_toRightOf="@+id/location"
                    android:layout_toEndOf="@+id/location"
                    android:layout_alignBottom="@+id/location"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/typeImage"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_walking"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ประเภท :"
                    android:id="@+id/textView8"
                    android:layout_alignTop="@+id/typeImage"
                    android:layout_toLeftOf="@+id/typeImage"
                    android:layout_toStartOf="@+id/typeImage"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4"
                android:layout_below="@+id/relativeLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/incidentPic"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/no_image_placeholder" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/color"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ปัญหา :"
                    android:gravity="center"
                    android:id="@+id/textView4"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:textSize="13dp"
                    android:layout_alignTop="@+id/typeSpin"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/typeSpin" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/typeSpin"
                    style="@style/spinner_style"
                    android:layout_below="@+id/incidentPic"
                    android:layout_toRightOf="@+id/textView4"
                    android:layout_toEndOf="@+id/textView4"
                    android:layout_marginRight="100dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptText"
                    android:background="@drawable/round_text"
                    android:layout_below="@+id/typeSpin"
                    android:layout_alignLeft="@+id/typeSpin"
                    android:layout_alignStart="@+id/typeSpin"
                    android:layout_alignRight="@+id/typeSpin"
                    android:layout_alignEnd="@+id/typeSpin"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ระบุ :"
                    android:id="@+id/textView5"
                    android:layout_toLeftOf="@+id/typeSpin"
                    android:layout_toStartOf="@+id/typeSpin"
                    android:textSize="13dp"
                    android:textColor="@color/abc_input_method_navigation_guard"
                    android:layout_above="@+id/infoTxt"
                    android:layout_alignTop="@+id/descriptText" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/ic_pencil"
                    android:layout_alignTop="@+id/infoTxt"
                    android:layout_alignRight="@+id/textView5"
                    android:layout_alignEnd="@+id/textView5" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/infoTxt"
                    android:background="@drawable/round_text"
                    android:textSize="13dp"
                    android:layout_below="@+id/descriptText"
                    android:layout_alignLeft="@+id/descriptText"
                    android:layout_alignStart="@+id/descriptText"
                    android:layout_marginTop="10dp"
                    android:layout_alignRight="@+id/descriptText"
                    android:layout_alignEnd="@+id/descriptText" />


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>
