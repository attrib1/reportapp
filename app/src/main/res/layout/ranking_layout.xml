<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/ranking"
        android:src="@drawable/rank1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignTop="@+id/imageView10"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView10"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ranking"
        android:layout_toEndOf="@+id/ranking"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:text="Chan Tung"
        android:textSize="15dp"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:gravity="right"
        android:id="@+id/linearLayout5"
        android:layout_alignTop="@+id/userName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/userName"
        android:layout_toEndOf="@+id/userName">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:id="@+id/bit4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bit3"
            android:layout_toStartOf="@+id/bit3"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:id="@+id/bit3"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bit2"
            android:layout_toStartOf="@+id/bit2"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:id="@+id/bit2"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bit1"
            android:layout_toStartOf="@+id/bit1"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:id="@+id/bit1"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/bit0"
            android:layout_toStartOf="@+id/bit0"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:id="@+id/bit0"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/number1"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</RelativeLayout>