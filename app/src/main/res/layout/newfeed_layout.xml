<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        >


        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test_profile" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_toEndOf="@+id/profile"
            android:layout_toRightOf="@+id/profile"
            android:text="Chan Suttichujit"
            android:textColor="#87ceeb"

            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ประเภท: "
            android:id="@+id/textView4"
            android:textSize="10dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/typeImage"
            android:layout_toStartOf="@+id/typeImage" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/typeImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_umbrella" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/incident"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/test" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"

            android:src="@drawable/calendar" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingLeft="7dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#87ceeb"
            android:text="26 Augest 2016" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:src="@drawable/location_icon"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:textSize="15dp"
            android:paddingTop="7dp"
            android:textStyle="bold"
            android:textColor="#87ceeb"
            android:text="Via Torino, 59, 30172 Venezia VE, Italy" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize = "12dp"
            android:layout_marginBottom="7dp"
            android:paddingTop="3dp"
            android:text="Comment is a comment where we comment and we shit shat around and when i come around when we come around we waking up"
            android:id="@+id/textView3" />


</LinearLayout>