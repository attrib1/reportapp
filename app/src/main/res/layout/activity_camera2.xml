<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.kisscompany.reportapp.activity.Camera">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="#3d70b6">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tempImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/Actype"
        android:layout_below="@+id/toolbar2" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/Actype"

        android:fillViewport="false"
        android:layout_alignLeft="@+id/tempImg"
        android:layout_alignStart="@+id/tempImg"
        android:layout_above="@+id/relativeLayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_money" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_heart"
                android:onClick="Click" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView6"
                android:src="@drawable/ice_home_boom" />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView7"
                android:src="@drawable/ice_home_boom" />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView8"
                android:src="@drawable/ice_home_boom" />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView9"
                android:src="@drawable/ice_home_boom" />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView10"
                android:src="@drawable/ice_home_boom" />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView11"
                android:src="@drawable/ice_home_boom" />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView12"
                android:src="@drawable/ice_home_boom" />
        </LinearLayout>
        </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Actype"
        android:layout_alignStart="@+id/Actype"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"

            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/sendTxt"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:paddingLeft="10dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_re" />
    </RelativeLayout>>
</RelativeLayout>
